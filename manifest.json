{
  "manifest_version": 2,

  "name": "fb-block",
  "description": "Blocks ALL request made to the main facebook domain and its subdomains",
  "version": "1.0",

  "browser_action": {
    "default_icon": "style/img/popup_btn_icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["/js/background/index.js"]
  },

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*/"
  ]
}
